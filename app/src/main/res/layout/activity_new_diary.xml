<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rocky.fragment.NewDiaryFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="记一记"
            android:textColor="@color/colorwhilteText"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/newdiary_iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="12dp"
            android:src="@mipmap/iconfont_fanhui" />

        <ImageView
            android:id="@+id/newdiary_iv_ok"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:padding="13dp"
            android:src="@mipmap/iconfont_queding" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/newdiary_et_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top"
            android:inputType="text"
            android:scrollbars="vertical"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBackgroundGray" />

        <LinearLayout
            android:id="@+id/newdiary_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/newdiary_iv_aa"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@mipmap/iconfont_aa" />

            <ImageView
                android:id="@+id/newdiary_iv_beijing"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@mipmap/iconfont_beijing" />

            <ImageView
                android:id="@+id/newdiary_iv_xiangce"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@mipmap/iconfont_xiangce" />

            <ImageView
                android:id="@+id/newdiary_iv_video"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@mipmap/iconfont_video" />

            <ImageView
                android:id="@+id/newdiary_iv_jianpan"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@mipmap/iconfont_jianpan" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
