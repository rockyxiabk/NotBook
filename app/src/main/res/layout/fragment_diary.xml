<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFragmentBackground"
    tools:context="com.rocky.fragment.DiaryFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="日记"
            android:textColor="@color/colorwhilteText"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/diary_rili"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="13dp"
            android:src="@mipmap/iconfont_rili" />

        <ImageView
            android:id="@+id/diary_search"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:padding="13dp"
            android:src="@mipmap/iconfont_sousuo" />

        <ImageView
            android:id="@+id/diary_bianji"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="14dp"
            android:src="@mipmap/iconfont_bianji" />
    </RelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/diary_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

    </com.handmark.pulltorefresh.library.PullToRefreshListView>


</RelativeLayout>
